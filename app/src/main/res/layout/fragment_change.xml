<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.profile.change.changeFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:id="@+id/change_user"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >

        <TextView
            android:id="@+id/title_username"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="MSSV"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView

            android:id="@+id/id_mssv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/image_1"
            android:layout_toRightOf="@id/title_username"
            android:gravity="center_vertical|right"
            android:text="mssv"
            android:textColor="@color/black"
            android:textSize="20sp" />
        <ImageView
            android:id="@+id/image_1"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_arrow_forward_ios_24"
            android:paddingRight="10dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/teal_700"/>
    <RelativeLayout
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:id="@+id/change_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/title_email"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Email"
            android:textSize="18sp"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center_vertical"/>

        <TextView

            android:id="@+id/id_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/image_2"
            android:layout_toRightOf="@id/title_email"
            android:gravity="center_vertical|right"
            android:text="email"
            android:textColor="@color/black"
            android:textSize="20sp" />
        <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/image_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_arrow_forward_ios_24"
            android:paddingRight="10dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/teal_700"/>
    <RelativeLayout
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:id="@+id/change_khoa"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/title_khoa"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Khóa"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/id_khoa"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/image_3"
            android:layout_toRightOf="@id/title_khoa"
            android:gravity="center_vertical|right"
            android:text="Khóa"
            android:textColor="@color/black"
            android:textSize="20sp" />
        <ImageView
            android:id="@+id/image_3"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_arrow_forward_ios_24"
            android:paddingRight="10dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/teal_700"/>
    <RelativeLayout
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:id="@+id/change_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title_password"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="Đặt Mật khẩu"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/image_4"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_arrow_forward_ios_24"
            android:paddingRight="10dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/teal_700"/>
    <RelativeLayout
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:id="@+id/change_gioitinh"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/title_gioitinh"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Giới tính"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:gravity="center_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/id_gioitinh"
            android:text="Chưa được thiết lập"
            android:layout_toRightOf="@id/title_gioitinh"
            android:layout_toLeftOf="@id/image_5"
            android:textColor="@color/black"
            android:gravity="center_vertical|right"
            android:textSize="20sp"/>
        <ImageView
            android:id="@+id/image_5"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_arrow_forward_ios_24"
            android:paddingRight="10dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/teal_700"/>
    <RelativeLayout
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:id="@+id/change_diachi"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/title_diachi"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Địa Chỉ"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:gravity="center_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/id_diachi"
            android:text="Chưa được thiết lập"
            android:layout_toRightOf="@id/title_diachi"
            android:layout_toLeftOf="@id/image_6"
            android:textColor="@color/black"
            android:gravity="center_vertical|right"
            android:textSize="20sp"/>
        <ImageView
            android:id="@+id/image_6"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_arrow_forward_ios_24"
            android:paddingRight="10dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/teal_700"/>

</LinearLayout>