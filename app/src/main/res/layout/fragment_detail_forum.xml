<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.detailForum.DetailForumFragment">

    <RelativeLayout
        android:layout_marginBottom="65dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:orientation="horizontal">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/image_detail_forum"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_alignParentStart="true"
                                android:padding="3dp"
                                android:src="@drawable/_60279747_1127526494354946_6683273208343303265_n" />

                            <LinearLayout
                                android:layout_toRightOf="@id/image_detail_forum"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txt_name_detail_forum"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="10dp"
                                    android:paddingTop="5dp"
                                    android:paddingRight="10dp"
                                    android:text="Lê Công"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/time_detail_forum"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingLeft="10dp"
                                        android:paddingTop="5dp"
                                        android:text="thời giam đăng" />

                                    <TextView
                                        android:id="@+id/date_detail_forum"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingLeft="10dp"
                                        android:paddingTop="5dp"
                                        android:text="ngày đăng" />
                                </LinearLayout>

                            </LinearLayout>
                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/ic_link_24"
                                android:padding="20dp"
                                android:background="@color/white"
                                android:id="@+id/getlink"/>

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtcontent_forum"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:text="Nội dung Bài viết"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:textStyle="normal" />
                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/detail_listanh"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/soluotlike_detail"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/soluotbinhluan_detail"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            tools:ignore="RtlCompat" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:orientation="horizontal"
                            android:id="@+id/btn_like_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:paddingLeft="10dp"
                            >
                            <ImageView
                                android:id="@+id/imagelike_detail"
                                android:layout_width="70dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:src="@drawable/ic_baseline_favorite_border_24"/>
                            <TextView
                                android:id="@+id/textlike_detail"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:text="Thích"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:textSize="20sp"
                                android:gravity="center"
                                android:textColor="@color/black"/>

                        </LinearLayout>

                        <Button
                            android:id="@+id/btn_comment_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:drawableLeft="@drawable/ic_baseline_comment_24"
                            android:paddingLeft="30dp"
                            android:paddingRight="30dp"
                            android:text="Bình Luận" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/black" />

                    <FrameLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="65dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="10dp"
                                    android:text="Bình Luận"
                                    android:textColor="@color/black"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:background="@color/teal_700" />
                            </LinearLayout>



                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:id="@+id/chuacocomment"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:textAlignment="center"
                                        android:textSize="18sp" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">

                                        <androidx.recyclerview.widget.RecyclerView
                                            android:id="@+id/detail_comment_forum_recyclerview"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content" />
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Xem thêm"
                                            android:textAlignment="center"
                                            android:textColor="@color/purple_700"
                                            android:id="@+id/detail_more"
                                            android:textStyle="bold"/>
                                    </LinearLayout>

                                    <ProgressBar
                                        android:id="@+id/detailforum_progressbar"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:visibility="visible" />

                                </FrameLayout>

                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>

            </FrameLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">
        <ListView
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:maxHeight="200dp"
            android:visibility="visible"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="60dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:id="@+id/listperson"
            />
        <LinearLayout
            android:id="@+id/linear_detail"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:weightSum="10">

            <ImageButton
                android:id="@+id/camera_comment"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:src="@drawable/ic_menu_camera" />


            <EditText
                android:id="@+id/edt_detail_forum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="8"
                android:background="@drawable/vien_tron_nen_trang"
                android:defaultFocusHighlightEnabled="false"
                android:hint="Bình luận"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp">

            </EditText>

            <ImageView
                android:id="@+id/btndang_detail_forum"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="2"
                android:src="@drawable/ic_baseline_send_24" />

        </LinearLayout>
    </LinearLayout>



</FrameLayout>