<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="ie.app.Start_app">
        <ImageView
            android:layout_alignParentTop="true"
            android:layout_marginTop="80dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/unnamed"
            android:id="@+id/imageview_startapp"/>
        <TextView
            android:layout_below="@id/imageview_startapp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="University of Engineering and Technology"
            android:textColor="#1368AC"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"/>

        <TextView
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nơi giao lưu và học hỏi dành riêng cho Cộng đồng UET"
            android:textStyle="italic"
            android:textColor="#1368AC"
            android:textSize="25sp"
            android:textAlignment="center"
            android:layout_marginBottom="150dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"/>

</RelativeLayout>